        <TextBox x:Name="enchantedChopCount" HorizontalAlignment="Left" Height="23" Margin="288,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <Label Content="Число плодов" HorizontalAlignment="Left" Margin="288,107,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="enchantedApplesCount" HorizontalAlignment="Left" Height="23" Margin="288,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
