        <Label Content="Дни зачарования" HorizontalAlignment="Left" Margin="288,155,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="enchantedDays" HorizontalAlignment="Left" Height="23" Margin="288,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <Button Content="Присвоить" HorizontalAlignment="Left" Height="23" Margin="288,209,0,0" VerticalAlignment="Top" Width="134" Click="SaveEnch"/>
        <Button Content="Присвоить" HorizontalAlignment="Left" Height="23" Margin="149,209,0,0" VerticalAlignment="Top" Width="134" Click="SaveExotic"/>
        <Button Content="Присвоить" HorizontalAlignment="Left" Height="23" Margin="10,209,0,0" VerticalAlignment="Top" Width="134" Click="SaveTree"/>
