        <Label Content="Число плодов" HorizontalAlignment="Left" Margin="149,107,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="exoticApplesCount" HorizontalAlignment="Left" Height="23" Margin="149,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="288,9,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="enchantedName" HorizontalAlignment="Left" Height="23" Margin="288,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
