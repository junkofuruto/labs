<Window x:Class="EX2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="FirstStringTextBox" Margin="20 10 20 0" VerticalAlignment="Top" Height="100"/>
        <TextBox x:Name="SecondStringTextBox" Margin="20 115 20 0" VerticalAlignment="Top" Height="100"/>
        <Button VerticalAlignment="Bottom" Margin="20 0 20 10" Content="OK" Click="ProceedTask"/>
    </Grid>
</Window>
