<Window x:Class="EX4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX4"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="FirstDataTextBox" Margin="10 10 10 0" VerticalAlignment="Top" Height="100"/>
        <TextBox x:Name="SecondDataTextBox" Margin="10 115 10 0" VerticalAlignment="Top" Height="100"/>
        <Button Margin="10 220 10 0" VerticalAlignment="Top" Content="OK" Click="SaveVectors"/>
        <Button Margin="10 245 10 0" VerticalAlignment="Top" Content="+" Click="SumVectors" HorizontalAlignment="Left" Width="40"/>
        <Button Margin="10 270 10 0" VerticalAlignment="Top" Content="-" Click="MinVectors" HorizontalAlignment="Left" Width="40"/>
    </Grid>
</Window>
