<Window x:Class="EX5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX5"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="1">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="FirstDataTextBox" Margin="10 10 10 0" VerticalAlignment="Top" Height="100"/>
                    <TextBox x:Name="SecondDataTextBox" Margin="10 115 10 0" VerticalAlignment="Top" Height="100"/>
                    <Button Margin="10 220 10 0" VerticalAlignment="Top" Content="OK" Click="ProceedTask"/>
                </Grid>
            </TabItem>
            <TabItem Header="2">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="FirstDataTextBox1" Margin="10 10 10 0" VerticalAlignment="Top" Height="100"/>
                    <TextBox x:Name="SecondDataTextBox1" Margin="10 115 10 0" VerticalAlignment="Top" Height="100"/>
                    <Button Margin="10 220 10 0" VerticalAlignment="Top" Content="OK" Click="ProceedTask1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
