<Window x:Class="EX2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX2"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="230">
    <Grid>
        <Label Content="Изменение:" FontFamily="Consolas" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 10 0 0"/>
        <TextBox x:Name="ChangeValueTextBox" FontFamily="Consolas" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100 14 0 0" Width="100"/>
        <Button FontFamily="Consolas" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 35 0 0" Width="190" Content="Выбрать и изменить" Click="SelectAndChangeAction"/>
    </Grid>
</Window>
