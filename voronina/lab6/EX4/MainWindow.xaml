<Window x:Class="EX4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX4"
        mc:Ignorable="d"
        Title="MainWindow" Height="125" Width="347">
    <Grid>
        <TextBox x:Name="PathTextBox" FontFamily="Consolas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 5 0 0" Width="300" FontSize="11"/>
        <Button FontFamily="Consolas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,25,0,0"
                Height="20" Width="300" Content="Источник" FontSize="11" Click="SelectSourceFilePathAction"/>
        <Button FontFamily="Consolas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,50,0,0"
                Height="20" Width="300" Content="Сохранить" FontSize="11" Click="SaveDataToFileAction"/>
    </Grid>
</Window>
